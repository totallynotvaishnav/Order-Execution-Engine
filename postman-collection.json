      "name": "1. Status Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/status",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "status"
          ]
        },
        "description": "Check if server is running"
      }
    },
