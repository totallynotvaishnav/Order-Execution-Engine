{
  "name": "dex-transaction-processor",
  "version": "1.0.0",
  "description": "High-performance decentralized exchange transaction processing system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "db:init": "./scripts/init-db.sh",
    "db:reset": "psql $DATABASE_URL -c 'DROP TABLE IF EXISTS transactions CASCADE' && npm run db:init",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:setup": "ts-node scripts/setup-db.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@fastify/websocket": "^10.0.1",
    "bullmq": "^4.6.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.1",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.11.10",
    "@types/uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
