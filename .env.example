NODE_ENV=development
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# Public URL (Optional - for production deployments)
# Example: https://your-app.railway.app
PUBLIC_URL=

# Database Configuration (PostgreSQL - Optional, will use memory if not configured)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/transactions_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false

# Cache Server Configuration (Redis - Required for queue)
CACHE_SERVER_HOST=localhost
CACHE_SERVER_PORT=6379
CACHE_AUTH_TOKEN=


# Worker Configuration
WORKER_CONCURRENCY_LIMIT=10
RETRY_ATTEMPT_LIMIT=3
RETRY_BACKOFF_DURATION=5000

# Feature Flags
USE_LIVE_TRADING=false
SIMULATION_LATENCY=200